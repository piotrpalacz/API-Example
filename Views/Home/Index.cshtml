

@{ViewData["Title"] = "Fetching Data from WebAPI";
}

<div class="container h-100">
    <aside class="card row h-100 justify-content-center align-items-center shadow">
        <div class="card-header">
            <h4>Look up Foods</h4>
        </div>
        <form id="recipe-search" class="card-body input-group form-container form flex-nowrap" asp-action="SearchByQuery" asp-controller="Home" method="get">
            <label class="col-form-label p-2" id="query-label" for="query">
                
            </label>
            <input class="input-group-text form-control" id="query" name="query" type="text" placeholder="Search USDA API" />
            <input class="btn btn-success" type="submit" value="Search" />
        </form>
    </aside>
</div>
